---
import BaseLayout from '../layouts/BaseLayout.astro';

import Hero from '../components/Hero.astro';
---

<BaseLayout title='About | Mark Poramest' description='About Mark Poramest'>
	<div class='stack gap-20'>
		<main class='wrapper about'>
